FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
WORKDIR /app
EXPOSE 7115

FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

# Copiamos TODA la solución backend
COPY . .

# Restauramos dependencias del proyecto API
RUN dotnet restore ETicketing.CA.API/ETicketing.CA.API.csproj

# Publicamos el API
RUN dotnet publish ETicketing.CA.API/ETicketing.CA.API.csproj -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "ETicketing.CA.API.dll"]
